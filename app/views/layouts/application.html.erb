<!DOCTYPE html>
<html>
<head>
  <title>SimpleBlog</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="container">
    <%= render 'layouts/header' %>
    <% if notice %>
      <div class='alert'>
      <%= notice %>
      </div>
    <% end %>
    <%= yield %>
  </div>

</body>
</html>
